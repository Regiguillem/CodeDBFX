<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.codedbmastersfx.controlador.ExcursionesController">
    <DatePicker fx:id="fechaInicioPicker" promptText="Fecha de inicio"/>
    <DatePicker fx:id="fechaFinPicker" promptText="Fecha de finalización"/>
    <Button text="Mostrar Excursiones" onAction="#onMostrarExcursionesClick"/>

    <!-- Aquí se agrega el TextArea para mostrar los resultados -->
    <TextArea fx:id="resultadosTextArea" prefWidth="400" prefHeight="300"/>
    <Button text="Volver" onAction="#onVolverClick"/>
</VBox>